{
    "root": true,
    "env": {
        "node": true,
        "es2021": true,
        "jquery": true,
        "browser": true,
        "commonjs": false
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "html",
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-unused-vars": "off",
        "no-unused-vars": "off",
        "no-debugger": "off",
        "no-empty": "off",
        "eol-last": "warn",
        "semi": [
            "warn",
            "always"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "arrow-parens": [
            "warn",
            "as-needed"
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ]
    }
}